# Project: SUMMER LANGUAGE

CPP  = g++
CC   = gcc
OBJ  = obj/core.o obj/lex.o obj/asm.o obj/ga.o obj/opengl_text.o obj/summer.o
BIN  = summer
CFLAGS = -O2 -Wall -DUSE_JIT
ifeq ($(OS),Windows_NT)
	LIBS = -lgdi32 -lopengl32 -lwinmm
  RES  = obj/resource.o
else
  LIBS = -ldl -lX11 -lGL
  RES =
endif
RM = rm -f

.PHONY: all all-before all-after clean clean-custom

all: all-before summer all-after

clean: clean-custom
	${RM} $(OBJ) $(BIN)

$(BIN): $(OBJ)
	$(CC) $(OBJ) -o "summer" $(LIBS) $(RES)

obj/core.o: src/core.c
	$(CC) $(CFLAGS) -c src/core.c -o obj/core.o

obj/lex.o: src/lex.c
	$(CC) $(CFLAGS) -c src/lex.c -o obj/lex.o

obj/asm.o: src/asm.c
	$(CC) $(CFLAGS) -c src/asm.c -o obj/asm.o

obj/ga.o: src/ga.c
	$(CC) $(CFLAGS) -c src/ga.c -o obj/ga.o

obj/opengl_text.o: src/opengl_text.c
	$(CC) $(CFLAGS) -c src/opengl_text.c -o obj/opengl_text.o

obj/summer.o: src/summer.c
	$(CC) $(CFLAGS) -c src/summer.c -o obj/summer.o
