var mx = 0;
var my = 0;

//-----------------------------------------------
// NOTE:
//   Implemented Function Argument (EVENT) only:
//
//   .offsetX;
//   .offsetY;
//
// Please Wait ...
//
//-----------------------------------------------
//
function onMouseMove (e) {
    mx = e.offsetX;
    my = e.offsetY;
}

function idle () {

    gaBeginScene();  //<<<<<<<<<<  DRAW START  >>>>>>>>>>

    gaFPS(); // display FPS count

    gaDisplayMouse (mx, my);

    gaEndScene(); //<<<<<<<<<<  DRAW END  >>>>>>>>>>
}

if (gaInit(800,600,idle)) {

    gaSetCall (onMouseMove, "onmousemove");

    gaRun ();

}
